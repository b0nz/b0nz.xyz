---
import Layout from "@components/Layout.astro";
import Navbar from "@components/Navbar.astro";

const posts = await Astro.glob('./*.md');
---

<Layout title="Projects">
  <Navbar />
  <main>
    <h3 class="text-2xl font-bold mb-4"># Learning</h3>
    <div>
      {posts.map(post => (
        <div class="border border-white rounded-md">
          <div class={`w-full h-32 rounded-t-md bg-slate-800 bg-cover`} style={{ backgroundImage: `url(${post.frontmatter.cover})` }} />
          <div class="p-4">
            <h5 class="text-lg font-bold">{post.frontmatter.title}</h5>
            <div class="flex flex-wrap text-sm">
              {post.frontmatter.tags.split(',').map(tag => (
                <span class="mr-2 mt-2 bg-slate-500 rounded-full py-1 px-2">{tag}</span>
              ))}
            </div>
            <p class="text-left mt-4">{post.frontmatter.description}</p>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>
